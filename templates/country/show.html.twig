{% extends 'base.html.twig' %}

{% block title %}Country{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/styles.css">
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="page-title">Country Details</h1>

        <div class="details-container">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ country.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ country.name }}</td>
                    </tr>
                    <tr>
                        <th>Currencies</th>
                        <td>{{ country.currencies ? country.currencies|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Capital</th>
                        <td>{{ country.capital }}</td>
                    </tr>
                    <tr>
                        <th>Region</th>
                        <td>{{ country.region }}</td>
                    </tr>
                    <tr>
                        <th>Subregion</th>
                        <td>{{ country.subregion }}</td>
                    </tr>
                    <tr>
                        <th>Languages</th>
                        <td>{{ country.languages ? country.languages|join(', ') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Latencia</th>
                        <td>{{ country.latencia ? country.latencia|join(', ') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Area</th>
                        <td>{{ country.area }}</td>
                    </tr>
                    <tr>
                        <th>Population</th>
                        <td>{{ country.population }}</td>
                    </tr>
                    <tr>
                        <th>Timezone</th>
                        <td>{{ country.timezone ? country.timezone|date('H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Continente</th>
                        <td>{{ country.continente }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="actions">
                <a href="{{ path('app_country_index') }}" class="btn btn-secondary">Back to List</a>
                <a href="{{ path('app_country_edit', {'id': country.id}) }}" class="btn btn-primary">Edit</a>
            </div>

            <div class="delete-form">
                {{ include('country/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
